# Database Configuration
# Replace with your PostgreSQL connection details
DATABASE_URL="postgresql://user:password@localhost:5432/skillpath_ai?schema=public"

# JWT Configuration
# Generate a strong secret key for production (e.g., using: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Groq Configuration (Free Cloud AI)
# Get your API key from https://console.groq.com/
# No credit card required for free tier
GROQ_API_KEY="your-groq-api-key-here"
# Optional: Change model (default: llama-3.1-8b-instant)
# Other options: llama-3.1-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL="llama-3.1-8b-instant"

# Server Configuration
PORT=3000

# Optional: Node Environment
# NODE_ENV="development"
